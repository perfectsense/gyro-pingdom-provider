@import ../init as _

pingdom::tcp-check tcp-check-example
    name: "tcp-check-example"

    # TCP check specific attributes
    port: 80
    string-to-send: "GET / HTTP/1.0"
    string-to-expect: "200 OK"

    # Common check attributes
    resolution: 5
    hostname: "s7.mydomain.com"

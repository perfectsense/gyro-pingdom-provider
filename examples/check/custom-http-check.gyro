@import ../init as _

pingdom::check custom-check-example
    name: "example-custom-check"
    resolution: 5
    hostname: "s7.mydomain.com"
    send-notification-when-down: 7
    notify-again-every: 4
    notify-when-back-up: true
    #tags: ["first-tag"]

    custom-http
        url: "/pingdom.xml"
        port: 443
        encryption: true
    end
end
